{
    "name": "screenly/screenly-cast-for-wordpress",
    "description": "WordPress plugin to enable casting of content on Screenly devices",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Screenly, Inc",
            "email": "info@screenly.io"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "squizlabs/php_codesniffer": "2.*",
        "wp-coding-standards/wpcs": "0.14.*"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress ./screenly-cast",
        "phpcbf": "phpcbf --standard=WordPress ./screenly-cast"
    }
}